<%- include('partials/header'); %>


<div class="container employees">
	<div class="col-lg-12">
		<!-- Search -->
		<div class="col-lg-6 offset-lg-3 col-12 order-lg-2 order-3 text-lg-left text-right">
			<div class="header_search">
				<div class="header_search_content">
					<div class="header_search_form_container">
						<form action="/search/employee" method="POST" class="header_search_form clearfix">
							<input type="search" name="search" required="required" class="header_search_input" placeholder="Search for employees...">
							
							<button type="submit" class="header_search_button trans_300" value="Submit"><img src="images/search.png" alt=""></button>
						</form>
					</div>
				</div>
			</div>
		</div>
		<div class="clearfix"></div>

		<div class="col-lg-12">
			
			<div class="row">
				<% if( typeof results == "undefined" ){ if( typeof employees != "undefined" ){ %>
					<% employees.forEach(function(emp){ %>
					<div class="col-lg-4">
						<div class="userData">
							<% if(typeof emp.image == "undefined"){ %>
								<a href="/employee/<%= emp._id %>">
									<img src="images/user.jpg" class="img-fluid" />
								</a>
							<% }else{ %>
							<a href="/employee/<%= emp._id %>">
								<img src="images/users/<%= emp.image
							  %>" class="img-fluid" />
							</a>
							<% } %>
							<a href="/employee/<%= emp._id %>">
								<h4 class="name"><%= emp.name %></h4>
							</a>
							<p class="tagline"><%= emp.tagline %></p>
						</div>
					</div>
				<% }); } }else{ results.forEach(function(user){ %>
				<div class="col-lg-4">
					<div class="userData">
						<a href="/employee/<%= user._id %>">
							<img src="images/users/<%= user.image
						  %>" class="img-fluid" />
						</a>
						<a href="/employee/<%= user._id %>">
							<h4 class="name"><%= user.name %></h4>
						</a>
						<p class="tagline"><%= user.tagline %></p>
					</div>
				</div>
				<% }); } %>
			</div>

		</div>
	</div>
</div>

<%- include('partials/footer'); %>