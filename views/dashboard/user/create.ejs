<%- include('../partials/header')   %>

		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/dashboard">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">Add Users</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Add Users</h1>
			</div>
		</div><!--/.row-->
		
		
		<div class="row">
			<div class="col-md-12">
				<div class="col-lg-6 col-lg-offset-2" style="background: #fff;padding: 20px;border-radius:10px;margin-bottom: 70px;">
					
					<form action="/admin/dashboard/user/create" method="POST">
						<% if(typeof errors != 'undefined'){ errors.forEach(function(error){ %>
							<div class="alert alert-warning"><%= error.msg %></div>
						<% });  } %>
						<div class="">
							<label for="title">Full Name</label>
							<input type="text" value="<% if(typeof(name) != 'undefined'){ %><%= name %><% } %>" name="name" id="title" class="form-control">
						</div>
						<br>
						<div class="">
							<label for="email">Email Address</label>
							<input type="text" value="<% if(typeof(email) != 'undefined'){ %><%= email %><% } %>" name="email" id="email" class="form-control">
						</div>
						<br>
						<div class="">
							<label for="role">Role</label>
							<select name="role" class="form-control" id="role">
								<option value="2">Admin</option>
								<option value="1">Employee</option>
								<option value="0">User</option>
							</select>
						</div>
						<br>
						<div class="">
							<label for="pass">Password</label>
							<input type="password" value="<% if(typeof(pass1) != 'undefined'){ %><%= pass1 %><% } %>" name="pass1" id="pass" class="form-control">
						</div>
						<br>
						<div class="">
							<label for="pass">Confirm Password</label>
							<input type="password" value="<% if(typeof(pass2) != 'undefined'){ %><%= pass2 %><% } %>" name="pass2" id="pass" class="form-control">
						</div>
						<br>
						<div>
							<button class="btn btn-primary">Add User</button>
						</div>
					</form>
				</div>
			</div>
		</div><!--/.row-->
	
	</div>	<!--/.main-->
	
<%- include('../partials/footer')   %>
	