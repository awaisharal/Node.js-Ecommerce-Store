<%- include("partials/header"); %>
<% if(typeof Usercheck != "undefined"){ if(UserCheck.role == "1"){ %>
	<script>window.open("/employee/profile", "_self")</script>
<% } } %>
<% if(typeof Usercheck != "undefined"){ if(UserCheck.role == "0"){ %>
	<script>window.open("/user/profile", "_self")</script>
<% } } %>
<% if(typeof Usercheck != "undefined"){ if(UserCheck.role == "2"){ %>
	<script>window.open("/admin/profile", "_self")</script>
<% } } %>
<div style="height: 100px;"></div>
<div class="main">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Register</div>

                <div class="card-body">
                    <% if(!errors){ error = 0 } %>
                    <% if(errors != 0){ %>
                        <% errors.forEach(function(error){ %>
                            <div class="alert alert-danger">
                                <%= error.msg %>
                            </div>
                        <% }); %>
                    <%  } %>
                    <form method="POST" action="/register">
                        <div class="form-group row">
                            <label for="name" class="col-md-4 col-form-label text-md-right">Name</label>
                            <div class="col-md-6">
                                <input id="name" type="text" class="form-control" name="name" value="<% if(typeof(name) != 'undefined'){ %><%= name %><% } %>" autofocus>
                               
                                    <span class="invalid-feedback" role="alert">
                                        <strong></strong>
                                    </span>
                               
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="email" class="col-md-4 col-form-label text-md-right">Email</label>

                            <div class="col-md-6">
                                <input id="email" type="email" class="form-control" name="email" value="<% if(typeof(email) != 'undefined'){ %><%= email %><% } %>">

                               
                                    <span class="invalid-feedback" role="alert">
                                        <strong></strong>
                                    </span>
                               
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="check" class="col-md-4 col-form-label text-md-right">Are you an employee?</label>
                            <div class="col-md-6">
                                <label for="role">No</label>
                                <input type="radio" name="role" value="0">
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <label for="role">Yes</label>
                                <input type="radio" name="role" value="1">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>

                            <div class="col-md-6">
                                <input id="password" type="password" class="form-control" name="pass1" title="6 or more characters">
                            </div>

                        </div>

                        <div class="form-group row">
                            <label for="password-confirm" class="col-md-4 col-form-label text-md-right">Confirm Password</label>

                            <div class="col-md-6">
                                <input id="password-confirm" type="password" class="form-control" name="pass2">
                            </div>
                        </div>
                        <div class="form-group row"> <div id="divCheckPasswordMatch" style="text-align: center; MARGIN: 0 auto;"></div></div>
                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Register
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<div style="height: 200px;border-bottom:1px solid #f6f6f6;"></div>

<%- include('partials/footer'); %>
